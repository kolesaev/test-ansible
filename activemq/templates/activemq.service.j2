
[Unit]
Description=ActiveMQ service
After=network.target

[Service]
Type=forking
ExecStart={{ activemq_folder }}/bin/activemq start
ExecStop={{ activemq_folder }}/bin/activemq stop
User={{ activemq_user }}
Group={{ activemq_user }}
Restart=always
RestartSec=9

[Install]
WantedBy=multi-user.target